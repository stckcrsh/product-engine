{
  "name": "product-engine-be",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/product-engine-be/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx-electron:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/product-engine-be",
        "main": "apps/product-engine-be/src/main.ts",
        "tsConfig": "apps/product-engine-be/tsconfig.app.json",
        "assets": ["apps/product-engine-be/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/product-engine-be/src/environments/environment.ts",
              "with": "apps/product-engine-be/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx-electron:execute",
      "options": {
        "buildTarget": "product-engine-be:build"
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "product-engine-be",
        "frontendProject": "product-engine",
        "sourcePath": "dist/apps",
        "outputPath": "dist/packages",
        "prepackageOnly": true
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "product-engine-be",
        "frontendProject": "product-engine",
        "sourcePath": "dist/apps",
        "outputPath": "dist/executables"
      }
    },
    "lint": {
      "command": "eslint apps/product-engine-be/**/*.ts"
    }
  }
}
