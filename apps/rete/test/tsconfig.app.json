{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "./dist",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["features/**/**/*.ts"],
  "exclude": ["jest.config.ts", "features/**/*.spec.ts", "features/**/*.test.ts"]
}
